# AI Trading Bot Environment Variables
# Copy this file to .env and fill in your keys

# LLM Provider Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Prediction Market Platform Keys
KALSHI_API_KEY=your_kalshi_api_key_here
POLYMARKET_API_KEY=your_polymarket_api_key_here

# Platform Private Keys (Optional: can also use private_key_file in JSON)
# For Kalshi: This should be your private key content
KALSHI_PRIVATE_KEY=your_kalshi_private_key_content_here
# For Polymarket: This should be your private key content
POLYMARKET_PRIVATE_KEY=your_polymarket_private_key_content_here

# Sports data keys
# Prefer SPORTRADAR_API_KEY. SPORTSRADAR_API_KEY is accepted for backward compatibility.
SPORTRADAR_API_KEY=your_sportradar_api_key_here
SPORTSRADAR_API_KEY=your_sportradar_api_key_here
SPORTRADAR_ACCESS_LEVEL=trial
# Optional full override (takes precedence over access level if set):
# SPORTRADAR_BASE_URL=https://api.sportradar.com/nba/production/v8/en
