{
  "analysis": {
    "provider": "claude",
    "allow_runtime_override": true,
    "context_json_path": "context/llm_context.json",
    "context_max_chars": 12000,
    "nba_elo_enabled": true,
    "nba_elo_data_path": "context/kaggleGameData.csv",
    "nba_elo_output_path": "app/outputs/elo_ratings.json",
    "llm_adjustment_max_delta": 0.03,
    "persist_reasoning_to_db": true,
    "use_recent_reasoning_context": true,
    "recent_reasoning_entries": 12,
    "recent_reasoning_max_chars": 4000
  },
  "api": {
    "batch_size": 5,
    "api_cost_limit_per_cycle": 5.00
  },
  "openai": {
    "model": "gpt-4o-mini",
    "temperature": 0.3,
    "max_tokens": 1000,
    "base_url": "https://api.openai.com/v1",
    "input_cost_per_mtok": 0.15,
    "output_cost_per_mtok": 0.60
  },
  "claude": {
    "model": "claude-3-5-sonnet-20241022",
    "temperature": 0.3,
    "max_tokens": 1000,
    "input_cost_per_mtok": 3.00,
    "output_cost_per_mtok": 15.00
  },
  "platforms": {
    "polymarket": {
      "enabled": false,
      "max_markets": 100
    },
    "kalshi": {
      "enabled": true,
      "max_markets": 100
    }
  },
  "trading": {
    "initial_bankroll": 10000,
    "dry_run": true
  },
  "strategy": {
    "min_edge": 0.10,
    "min_confidence": 0.75,
    "heavy_favorite_yes_price_threshold": 0.80,
    "heavy_favorite_buy_no_min_edge": 0.15,
    "heavy_favorite_buy_no_min_confidence": 0.85
  },
  "risk": {
    "max_kelly_fraction": 0.25,
    "max_positions": 10,
    "max_position_size": 1000,
    "max_total_exposure_fraction": 0.80,
    "max_new_exposure_per_day_fraction": 0.80
  },
  "filters": {
    "min_volume": 1000,
    "min_liquidity": 500
  },
  "signal_fusion": {
    "enabled": false,
    "mode": "none",
    "curator_jsonl_path": "path/to/curator/signals.jsonl",
    "market_feed_jsonl_path": "path/to/market-feed/signals.jsonl",
    "ttl_seconds": 300,
    "max_event_age_seconds": 7200,
    "max_scan_lines": 4000,
    "curator_boost": 0.08,
    "market_feed_boost": 0.06,
    "low_recommendation_penalty": 0.22,
    "anomaly_penalty_factor": 0.70,
    "max_anomaly_veto": 0.95,
    "signal_score_weight": 0.20
  }
}
